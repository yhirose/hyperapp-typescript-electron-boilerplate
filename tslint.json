{
  "extends": "tslint:recommended",
  "rules": {
    "interface-name": [false, "always-prefix"],
    "max-line-length": {
      "options": [
        120
      ]
    },
    "no-arg": true,
    "no-bitwise": true,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "trailing-comma": [ true, { "multiline": "never", "singleline": "never" }]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
